<h1>Character#index</h1>

  <!DOCTYPE html>
  <html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Heroic Features - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/heroic-features.css" rel="stylesheet">

  </head>

  <body>


    <!-- Page Content -->
    <div class="container">

      <!-- Jumbotron Header -->
      <header class="jumbotron my-4" style="background-image: url(https://specials-images.forbesimg.com/imageserve/1035676256/960x0.jpg?fit=scale);" style="height: 600px;">
        <h3 class="text-white"></h3>
        <p class="lead"></p>
      </header>



      <!-- Page Features -->
      <h3 class="text-secondary">Personajes</h3>

      <div class="row text-center">


                <% i = 1 %>
                <% while i <= 25 do %>
                <%= result = Character.consulta_pagina(i) ; nil%>
                 <% result.each do |char| %>
                    <div class="col-lg-3 col-md-6 mb-4">
                      <div class="card h-100">
                        <img class="card-img-top" src=<%= char["image"] %> alt="">
                        <div class="card-body">
                          <h4 class="card-title"><%= char["name"]%> </h4>
                        </div>
                        <div class="card-footer">
                          <%= link_to 'Ver Personaje', "../character/#{char["id"]}", class:"btn btn-secondary" %>
                        </div>
                      </div>
                    </div>
                   <% end %>
                  <% i += 1 %>
                <% end %>
      <!-- /.row -->

    </div>
    <!-- /.container -->

    <!-- Footer -->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white"></p>
      </div>
      <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

  </html>
