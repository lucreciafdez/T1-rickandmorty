<h1>Character - show</h1>

<h3><%= @character.name %></h3>
<h3><%= @character.status %></h3>
<h3><%= @character.species %></h3>
<h3><%= @character.type_char %></h3>
<h3><%= @character.gender %></h3>
<img src="<%= @character.image %>"alt= "Image" height="250" width="300">

<h3>Origen</h3>
<% Location.all.each do |loc| %>
<% if loc.url == JSON.parse(@character.origin.gsub('=>', ':'))["url"]%>
<%= link_to loc.name, episodio_path(loc) %>
<% end %>
<% end %>

<h3>Location</h3>
<% Location.all.each do |loc| %>
<% if loc.url == JSON.parse(@character.location.gsub('=>', ':'))["url"]%>
<%= link_to loc.name, episodio_path(loc) %>
<% end %>
<% end %>

<h3>Episodios</h3>
<%JSON.parse(@character.episode).each do |url| %>
<% Episodio.all.each do |epi| %>
<% if epi.url == url %>
  <%= link_to epi.name, episodio_path(epi) %>
<% end %>
<% end %>
<% end %>
