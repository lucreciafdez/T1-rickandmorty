<h1>Episodios#index</h1>

  <!DOCTYPE html>
  <html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Heroic Features - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/heroic-features.css" rel="stylesheet">

  </head>

  <body>


    <!-- Page Content -->
    <div class="container">

      <!-- Jumbotron Header -->
      <header class="jumbotron my-4" style="background-image: url(https://smartodds.blog/wp-content/uploads/2018/11/universe.jpg);" style="height: 1000px;">
        <h1 class="text-white"></h1>
        <p class="lead"></p>
      </header>




      <!-- Page Features -->
      <h3 class="text-secondary">Episodios</h3>
      <div class="row text-center">

        <% i = 1 %>
        <% while i <= 2 do %>
        <%= result = Episodio.consulta_pagina(i) ; nil%>
         <% result.each do |epi| %>
            <div class="col-lg-3 col-md-6 mb-4">
              <div class="card h-100">
                <div class="card-body">
                  <h4 class="card-title"><%= epi["name"]%> </h4>
                  <p class="card-text"> <%= epi["episode"] %> <%= epi["air_date"] %></p>
                </div>
                <div class="card-footer">
                  <%= link_to 'Ver Episodio', "../episodios/#{epi["id"]}", class:"btn btn-secondary" %>
                </div>
              </div>
            </div>
           <% end %>
          <% i += 1 %>
          <% end %>

      <!-- /.row -->

    </div>
    <!-- /.container -->

    <!-- Footer -->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white"></p>
      </div>
      <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

  </html>
