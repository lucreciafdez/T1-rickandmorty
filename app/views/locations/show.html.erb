<h1>Locations#show</h1>

  <!DOCTYPE html>
  <html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Heroic Features - Start Bootstrap Template</title>

    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/heroic-features.css" rel="stylesheet">

  </head>

  <body>


    <!-- Page Content -->
    <div class="container">

      <!-- Jumbotron Header -->
      <header class="jumbotron my-4" >
        <h1 class="display-3"><%= @location.name %></h1>
        <p class="lead"><%= @location.type_loc %></p>
        <p class="lead"><%= @location.dimension %></p>
        <a href="#" class="btn btn-secondary">Ir al Inicio</a>
      </header>



      <!-- Page Features -->
      <h2> Residentes</h2>
      <div class="row text-center">
       <%@location.residents.each do |url| %>
           <% Character.all.each do |char| %>
           <% if char.url == url %>

          <div class="col-lg-3 col-md-6 mb-4">
            <div class="card h-100">
              <img class="card-img-top" src=<%= char.image%> alt="">
              <div class="card-body">
                <h4 class="card-title"><%= char.name%> </h4>
              </div>
              <div class="card-footer">
                <h4><%= link_to 'Ver Personaje', character_path(char), class:"btn btn-secondary"%><h4>
              </div>
            </div>
          </div>
        <% end %>
        <% end %>
      <% end %>

      <!-- /.row -->

    </div>
    <!-- /.container -->

    <!-- Footer -->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white"></p>
      </div>
      <!-- /.container -->
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  </body>

  </html>
