<h1>Search#index</h1>

<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Heroic Features - Start Bootstrap Template</title>

  <!-- Bootstrap core CSS -->
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="css/heroic-features.css" rel="stylesheet">

</head>

<body>


  <!-- Page Content -->
  <div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron my-4" style="background-image: url(https://smartodds.blog/wp-content/uploads/2018/11/universe.jpg);" style="height: 600px;">
      <h1 class="display-3"></h1>
      <p class="lead"></p>
    </header>



    <!-- Page Features -->
    <h5 class="text-secondary">Resultados de BÃºsqueda:</h5>
    <div class="row text-center">

      <% url_char = Character.consulta_todos%>
      <% url_char.each do |char| %>
      <% if @input.in? char["name"].downcase %>
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">
          <img class="card-img-top" src=<%= char["image"] %> alt="">
          <div class="card-body">
            <h4 class="card-title">Personaje: <%= char["name"]%> </h4>
          </div>
          <div class="card-footer">
            <%= link_to 'Ver Personaje', "../character/#{char["id"]}", class:"btn btn-secondary" %>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>

      <% url_epi = Episodio.consulta_todos%>
      <% url_epi.each do |epi| %>
      <% if @input.in? epi["name"].downcase %>
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">
          <img class="card-img-top" src="https://www.rockandpop.cl/wp-content/uploads/2018/10/rick-and-morty-400x360.jpg" alt="">
          <div class="card-body">
            <h4 class="card-title">Episodio: <%= epi["name"]%> </h4>
          </div>
          <div class="card-footer">
            <%= link_to 'Ver Episodio', "../episodios/#{epi["id"]}", class:"btn btn-secondary" %>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>


      <% url_loc = Location.consulta_todos%>
      <% url_loc.each do |loc| %>
      <% if @input.in? loc["name"].downcase %>
      <div class="col-lg-3 col-md-6 mb-4">
        <div class="card h-100">
          <img class="card-img-top" src="https://i.pinimg.com/originals/69/ce/b0/69ceb0ed9a4df2cd159b069fe04b21ec.jpg" alt="">
          <div class="card-body">
            <h4 class="card-title">Lugar: <%= loc["name"]%> </h4>
          </div>
          <div class="card-footer">
            <%= link_to 'Ver Lugar', "../locations/#{loc["id"]}", class:"btn btn-secondary" %>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>





    <!-- /.row -->

  </div>
  <!-- /.container -->

  <!-- Footer -->
  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white"></p>
    </div>
    <!-- /.container -->
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>
