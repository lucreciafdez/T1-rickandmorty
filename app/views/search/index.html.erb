<h1>Search#index</h1>

<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Heroic Features - Start Bootstrap Template</title>

  <!-- Bootstrap core CSS -->
  <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom styles for this template -->
  <link href="css/heroic-features.css" rel="stylesheet">

</head>

<body>


  <!-- Page Content -->
  <div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron my-4" style="background-image: url(https://smartodds.blog/wp-content/uploads/2018/11/universe.jpg);" style="height: 600px;">
      <h1 class="display-3"></h1>
      <p class="lead"></p>
    </header>



    <!-- Page Features -->
    <h5 class="text-secondary">Resultados de BÃºsqueda:</h5>
    <div class="row text-center">

      <% @result_location.each do |e| %>
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="card h-100">
            <img class="card-img-top" src=<%= "https://i.pinimg.com/originals/69/ce/b0/69ceb0ed9a4df2cd159b069fe04b21ec.jpg"%> alt="">
            <div class="card-body">
              <h4 class="card-title">Lugar: <%= e.name%> </h4>
              <p class="card-text"> <%= e.dimension %> </p>
            </div>
            <div class="card-footer">
              <%= link_to 'Ver Lugar', location_path(e), class:"btn btn-secondary" %>

            </div>
          </div>
        </div>
      <% end %>

      <% @result_episode.each do |e| %>
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="card h-100">
            <img class="card-img-top" src="https://www.rockandpop.cl/wp-content/uploads/2018/10/rick-and-morty-400x360.jpg" alt="">
            <div class="card-body">
              <h4 class="card-title">Episodio: <%= e.name%> </h4>
              <p class="card-text"> <%= e.episode %> <%= e.air_date %></p>
            </div>
            <div class="card-footer">
              <%= link_to 'Ver Episodio', episodio_path(e), class:"btn btn-secondary" %>

            </div>
          </div>
        </div>
      <% end %>

      <% @result_character.each do |e| %>
        <div class="col-lg-3 col-md-6 mb-4">
          <div class="card h-100">
            <img class="card-img-top" src=<%= e.image%> alt="">
            <div class="card-body">
              <h4 class="card-title">Personaje: <%= e.name%> </h4>
              <p class="card-text"> <%= e.species %> </p>
            </div>
            <div class="card-footer">
              <%= link_to 'Ver Personaje', character_path(e), class:"btn btn-secondary" %>

            </div>
          </div>
        </div>
      <% end %>




    <!-- /.row -->

  </div>
  <!-- /.container -->

  <!-- Footer -->
  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white"></p>
    </div>
    <!-- /.container -->
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>
